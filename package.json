{
    "name": "class-validator-ext",
    "version": "1.0.0",
    "description": "class-validator-ext",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "keywords": [
        "Class Validator",
        "Class Transformer",
        "Class Validator Extension"
    ],
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node lib/index.js",
        "watch-node": "nodemon lib/index.js",
        "watch": "concurrently -k -p \"[{name}x]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect lib/index.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint . --ext .ts --fix",
        "ncu": "npx npm-check-updates -u --enginesNode"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/node": "^14.11.2",
        "@typescript-eslint/eslint-plugin": "^5.33.0",
        "@typescript-eslint/parser": "^5.33.0",
        "concurrently": "^7.3.0",
        "eslint": "^8.21.0",
        "nodemon": "^2.0.19",
        "ts-node": "^10.2.1",
        "typescript": "4.7.4"
    },
    "author": "Mark Ernest R. Matute",
    "license": "ISC",
    "engines": {
        "node": "18.7.0",
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.4"
    },
    "dependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "dotenv": "^16.0.1",
        "express": "^4.18.1"
    }
}